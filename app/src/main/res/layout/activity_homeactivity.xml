<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg1"
        android:padding="16dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="0dp"
      >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:padding="8dp"
            android:text="Fill the Form"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/userNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:padding="8dp"
            android:textColor="@color/black"/>
        <EditText
            android:id="@+id/titleEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/lavender_border"
            android:hint="Title"
            android:inputType="text"
            android:minHeight="48dp"
            android:padding="8dp" />

       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal">

           <Spinner
               android:id="@+id/category"
               android:layout_width="wrap_content"
               android:layout_height="48dp"
               android:layout_marginRight="25dp"
               android:layout_marginBottom="16dp"
               android:background="@drawable/lavender_border"
               android:entries="@array/category_array" />

        <!-- Spinner pour la liste des secteurs -->
        <Spinner
            android:id="@+id/sector"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/lavender_border"
            android:entries="@array/sector_array" />

        <!-- Spinner pour la liste des villes -->
        <Spinner
            android:id="@+id/city"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/lavender_border"
            android:entries="@array/city_array"
            android:layout_marginLeft="25dp"/>
       </LinearLayout>
        <!-- text for contract type -->
        <EditText
            android:id="@+id/cont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/lavender_border"
            android:hint="Contract type"
            android:inputType="text"
            android:minHeight="48dp"
            android:padding="8dp" />

        <!-- Champ de texte pour la description -->
        <EditText
            android:id="@+id/desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Description"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:padding="8dp"
            android:background="@drawable/lavender_border"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:backgroundTint="@color/blue"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Out"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="55dp"
            android:id="@+id/signout"
            android:backgroundTint="@color/dark_blue"/>

    </LinearLayout>
</ScrollView>
